<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" Height="220" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        >
    <Grid Margin="10">
        <Label Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,10,0,0" FontWeight="Bold"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,30,0,0" Width="270" Height="25"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,70,0,0" FontWeight="Bold"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,90,0,0" Width="270" Height="25"/>

        <Button Name="LoginButton" Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,130,0,0" Width="270" Height="35" 
                Background="#007ACC" Foreground="White" FontWeight="Bold" Click="LoginButton_Click"/>
    </Grid>
</Window>
